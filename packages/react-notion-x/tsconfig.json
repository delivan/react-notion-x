{
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    // "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "isolatedModules": true,
    "traceResolution": false,
    "listEmittedFiles": false,
    "listFiles": false,
    "pretty": true,

    "baseUrl": ".",
    "paths": {
      "*": ["types/*"]
    },
    "rootDir": "src",
    "outDir": "build/esm",
    "tsBuildInfoFile": "build/esm/index.tsbuildinfo",
    "lib": ["DOM", "ESNext"],
    "strict": false,
    "noImplicitReturns": false,
    "skipLibCheck": true,
    "jsx": "react"
  },
  "include": ["src"]
}
